{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Web3 Experience Survey",
  "type": "array",
  "keys": ["_id", "years_in_web3", "responses"],
  "items": {
    "type": "object",
    "properties": {
      "_id": {
        "type": "string",
        "format": "uuid",
        "coerce": true
      },
      "years_in_web3": {
        "type": "object",
        "properties": {
          "$share": {
            "type": "string"
          }
        },
        "required": ["$share"]
      },
      "responses": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "rating": {
              "type": "integer",
              "minimum": 1,
              "maximum": 5
            },
            "question_number": {
              "type": "integer",
              "minimum": 1
            }
          },
          "required": ["rating", "question_number"]
        },
        "minItems": 1
      }
    },
    "required": ["_id", "years_in_web3", "responses"]
  }
}
